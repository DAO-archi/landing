---
// @ts-ignore
import { Icon } from "astro-icon/components";
import { Picture } from "astro:assets";
import placeholderImage from "@assets/direct-message-conversation.png";

interface Props {
  title: string;
  description: string;
  icon: string;
  iconPosition?: "left" | "right";
  badge?: string;
  image?: string;
}

const {
  title,
  description,
  icon,
  iconPosition = "left",
  badge,
  image,
} = Astro.props;
---

<div class="grid md:grid-cols-2 md:py-24 md:grid-cols-2">
  <div
    class={`grid place-items-center ${iconPosition === "left" ? "order-1" : "md:order-2"}`}>
    <div
      class="bg-primary-100/50 rounded-full p-16 transition-all duration-300 hover:bg-primary-100 hover:scale-105 hover:shadow-lg group">
      <!-- {image && <img src={image} alt="Feature Image" />}
      {
        !image && icon && (
          <Icon
            name={icon}
            class="w-24 h-24 text-gray-900 transition-transform duration-300 group-hover:scale-110"
          />
        )
      } -->
      <Picture src={placeholderImage} alt="Feature Image" />
    </div>
  </div>
  <div
    class={`grid place-items-center ${iconPosition === "left" ? "order-2" : "md:order-1"}`}>
    <div class="max-w-lg">
      {
        badge && (
          <span class="border border-gray-300 text-gray-100 rounded-full text-xs font-medium px-3 py-1">
            {badge}
          </span>
        )
      }
      <h3 class="text-2xl font-bold mt-4 [text-wrap:balance]">
        {title}
      </h3>
      <p class="mt-4 text-slate-100 [text-wrap:balance]">{description}</p>
      <ul class="grid mt-6 text-left gap-y-4">
        <slot />
      </ul>
    </div>
  </div>
</div>
