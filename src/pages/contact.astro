---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">We are a here to help.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-bold text-2xl text-gray-800">
          Contact the DAO.archi Team
        </h2>
        <p class="text-lg leading-relaxed text-slate-200 mt-3">
          Looking for a custom integration or want your own deployment? Fill out
          the form and we'll get back to you as soon as possible.
        </p>
        <div class="mt-5">
          <!-- <div class="flex items-center mt-2 space-x-2 text-gray-300">
            <Icon class="text-gray-800 w-4 h-4" name="uil:map-marker" />
            <span>1734 Sanfransico, CA 93063</span>
          </div> -->
          <div class="flex items-center mt-2 space-x-2 text-gray-300">
            <Icon class="text-gray-800 w-4 h-4" name="uil:envelope" />
            <a href="mailto:admin@dao.archi"> admin@dao.archi </a>
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-300">
            <Icon class="text-gray-800 w-4 h-4" name="uil:phone" />
            <a href="tel:+1 (987) 458 7899">+1 (987) 458 7899 </a>
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
